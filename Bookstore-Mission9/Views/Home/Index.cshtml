@{
    ViewData["Title"] = "Home Page";
}

@model ProjectViewModel

<h2 class="text-center">The Bookstore</h2>
    @*This is the bootstrapped stuff displayng the records from the database*@
        @foreach (Book b in Model.Books)
        {
            <partial name="BookDesc" model="b" class="text-center"/>
        }
<div bookie-pager="@Model.Infopage" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>
