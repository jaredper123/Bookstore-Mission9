
@{
}
@model Book

<div class="bg-faded p-1 card card-outline-primary m-1">
    <ul>
        <div>
            <h3 class="card-text p-1">@Model.Title</h3>
        </div>

        <ul class="card-text p-1">@Model.Author</ul>
        <ul class="card-text p-1">@Model.Publisher</ul>
        <ul class="card-text p-1">@Model.Isbn</ul>
        <ul class="card-text p-1">@Model.Classification</ul>
        <ul class="card-text p-1">@Model.Category</ul>
        <ul class="card-text p-1">@Model.PageCount</ul>
        <center><ul class="badge badge-pill badge-primary" style="float:right">@Model.Price</ul></center>
    </ul>
    <form method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-right">Add To Cart</button>
        </span>
    </form>
</div>

